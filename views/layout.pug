doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Knowledge Base
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='/') Knowledge Base
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link.active(aria-current='page', href='/') Home
            if user
              li.nav-item
                a.nav-link(href='/articles/add') Add Articles
          ul.navbar-nav.ms-auto
            if user
              li.nav-item
                a.nav-link(href='/') Welcome #{user.name}
              li.nav-item
                a.nav-link(href='/users/logout') Logout
            else
              li.nav-item
                a.nav-link(href='/users/register') Register
              li.nav-item
                a.nav-link(href='/users/login') Login

    .container.mt-4
      include message.pug
      block content
      br
      hr
      footer.text-center
        p &copy; 2024 Knowledge Base
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.bundle.min.js')
    script(src='/js/main.js')
